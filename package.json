{
  "name": "claypot",
  "description": "Claypot is an efficient, scalable server framework for Node.js",
  "version": "0.1.1",
  "main": "lib/index",
  "bin": {
    "claypot": "bin/claypot"
  },
  "files": [
    "LICENSE.md",
    "README.md",
    "bin",
    "assets",
    "lib"
  ],
  "scripts": {
    "start": "yarn test --watchAll",
    "prebuild": "rimraf lib",
    "build": "babel src -d lib",
    "cli": "cross-env CLAYPOT_DEV=true babel-node src/cli",
    "format": "prettier-eslint --write \"+(src|test)/**/*.js\"",
    "docs": "run-s docs:*",
    "docs:build": "gitbook build ./docs",
    "docs:deploy": "git-directory-deploy --directory ./docs/_book",
    "preversion": "yarn test && yarn build",
    "test": "cross-env CLAYPOT_DEV=true jest --runInBand",
    "watch:build": "yarn build -w",
    "watch:docs": "gitbook serve ./docs"
  },
  "author": "Cap32",
  "license": "MIT",
  "repository": "cantonjs/claypot.git",
  "engines": {
    "node": ">= 7.6.0"
  },
  "dependencies": {
    "cache-manager": "^2.4.0",
    "chalk": "^2.1.0",
    "find-port-sync": "^1.1.0",
    "gradient-string": "^0.1.1",
    "http-ask": "^0.0.0-rc1",
    "http-proxy": "^1.12.0",
    "import-file": "^1.2.4",
    "koa": "^2.2.0",
    "koa-compress": "^2.0.0",
    "koa-connect-history-api-fallback": "^0.3.1",
    "koa-error": "^3.0.0",
    "koa-etag": "^2.0.0",
    "koa-favicon": "^2.0.0",
    "koa-helmet": "^3.1.0",
    "koa-mount": "^3.0.0",
    "koa-static": "^4.0.1",
    "koa-weixin-jssdk": "^2.0.0",
    "lodash": "^4.17.2",
    "ms": "^2.0.0",
    "output-host": "^3.1.1",
    "pot-js": "^0.0.0-beta.49",
    "pot-logger": "^0.4.0",
    "prop-types": "^15.5.10",
    "qiniu": "^6.1.13",
    "raw-body": "^2.2.0",
    "redis": "^2.6.3",
    "skeeler": "^0.1.0",
    "yargs": "^6.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.2.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-preset-stage-0-without-async": "^1.0.0",
    "babel-register": "^6.11.6",
    "babel-register-cli": "^4.0.0",
    "co-body": "^4.2.0",
    "cross-env": "^4.0.0",
    "delay": "^2.0.0",
    "eslint": "^4.16.0",
    "eslint-config-cantonjs": "^0.2.0",
    "get-port": "^3.1.0",
    "git-directory-deploy": "^1.5.1",
    "gitbook-cli": "^2.3.2",
    "is-reachable": "^2.3.2",
    "jest": "^21.2.1",
    "kapok-js": "^0.10.1",
    "mkdirp": "^0.5.1",
    "node-fetch": "^1.7.1",
    "npm-run-all": "^4.0.2",
    "pify": "^3.0.0",
    "prettier-eslint-cli": "^4.7.0",
    "qs": "^6.3.0",
    "rimraf": "^2.5.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "modulePathIgnorePatterns": [
      "node_modules",
      "lib"
    ]
  }
}
