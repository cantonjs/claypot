{
  "name": "claypot",
  "description": "Just a static HTTP server.",
  "version": "0.0.0-beta.22",
  "main": "lib/index",
  "bin": {
    "claypot": "bin/claypot"
  },
  "files": [
    "LICENSE.md",
    "README.md",
    "bin",
    "assets",
    "lib"
  ],
  "scripts": {
    "start": "yarn test -- --watchAll",
    "test": "cross-env CLAYPOT_DEV=true jest",
    "ls": "yarn cli -- ls",
    "log": "yarn cli -- log",
    "stop": "yarn cli -- stop",
    "prebuild": "rimraf lib",
    "build": "babel src -d lib",
    "postbuild": "cp src/error.html lib/error.html",
    "build:watch": "yarn build -- -w",
    "prepublish": "yarn build",
    "server:test": "babel-register test/proxyServer",
    "cli": "cross-env CLAYPOT_DEV=true babel-node src/cli"
  },
  "author": "Cap32",
  "license": "MIT",
  "repository": "cantonjs/claypot.git",
  "engines": {
    "node": ">= 7.6.0"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "find-port-sync": "^1.0.0",
    "fs-promise": "^1.0.0",
    "http-ask": "^0.0.0-rc1",
    "http-proxy": "^1.12.0",
    "import-file": "^1.2.2",
    "koa": "^2.2.0",
    "koa-compress": "^2.0.0",
    "koa-connect-history-api-fallback": "^0.3.1",
    "koa-error": "^3.0.0",
    "koa-etag": "^2.0.0",
    "koa-favicon": "^2.0.0",
    "koa-helmet": "^3.1.0",
    "koa-mount": "^3.0.0",
    "koa-response-time": "^2.0.0",
    "koa-router": "^7.1.1",
    "koa-static": "^3.0.0",
    "koa-weixin-jssdk": "^2.0.0",
    "lodash": "^4.17.2",
    "log4js": "^1.0.1",
    "output-host": "^2.1.0",
    "pot-js": "^0.0.0-beta.22",
    "qiniu": "^6.1.13",
    "redis": "^2.6.3",
    "yargs": "^6.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^19.0.0",
    "babel-plugin-transform-es2015-destructuring": "^6.19.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-plugin-transform-es2015-parameters": "^6.18.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-preset-stage-0-without-async": "^1.0.0",
    "babel-register": "^6.11.6",
    "babel-register-cli": "^4.0.0",
    "co-body": "^4.2.0",
    "cross-env": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^19.0.1",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "get-port": "^3.1.0",
    "is-port-reachable": "^2.0.0",
    "is-reachable": "^2.3.2",
    "jest": "^19.0.2",
    "kapok-js": "^0.4.1",
    "mkdirp": "^0.5.1",
    "qs": "^6.3.0",
    "rimraf": "^2.5.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "modulePathIgnorePatterns": [
      "node_modules",
      "lib"
    ]
  }
}
